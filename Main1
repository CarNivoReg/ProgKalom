            for (int x = 0; x < tomb.Length; x++)
            {
                _ = new Malph();
                tomb[x] = Malph.randSz;
            }
            Console.WriteLine("Rendezettlen tömb:");
            for (int x = 0; x < Mh; i++)
            {
                Console.Write(tomb[x] + " ");               
            }
            Console.WriteLine();
            Yasuo.Rend();
            Console.WriteLine("Rendezett tömb:");
            for (int x = 0; x < Mh; x++)
